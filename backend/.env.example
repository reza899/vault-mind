# Vault Mind - Simple Configuration
# Copy this file to .env and update values as needed

# Embedding Provider (chromadb, openai, local)
EMBEDDING_PROVIDER=chromadb

# Model Name
EMBEDDING_MODEL=all-MiniLM-L6-v2

# OpenAI (optional - only if using OpenAI provider)
OPENAI_API_KEY=

# Performance
EMBEDDING_BATCH_SIZE=100
CACHE_ENABLED=true

# Database
CHROMA_PERSIST_DIR=./chroma_db

# Development
DEV_MODE=true